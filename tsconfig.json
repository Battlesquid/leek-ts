{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es5", "es6"],
        "module": "commonjs",
        "baseUrl": "./src",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"]
}
