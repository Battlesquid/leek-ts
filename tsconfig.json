{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es5",
            "es6"
        ],
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@utils": [
                "utils/"
            ],
            "@db": [
                "db/"
            ],
            "@interactions": [
                "interactions/"
            ],
            "@modals": [
                "modals/"
            ]
        },
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
}