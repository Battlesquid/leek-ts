generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Imageboard {
  gid       String   @id @db.VarChar
  boards    String[]
  whitelist String[]
}

model LogSettings {
  gid        String  @id @db.VarChar
  text       String? @db.VarChar
  image      String? @db.VarChar
  moderation String? @db.VarChar
}

model Logs {
  timestamp String  @id
  data      String? @db.VarChar
}

model VerifyEntry {
  gid  String @db.VarChar
  uid  String @db.VarChar
  nick String @db.VarChar(32)

  @@id([uid, gid], map: "uid_gid_pkey")
}

model VerifySettings {
  gid       String   @id @db.VarChar
  type      String
  join_ch   String?  @db.VarChar
  roles     String[]
  autogreet Boolean?
}

model HallOfFame {
  gid   String   @id @db.VarChar
  halls String[]
}
